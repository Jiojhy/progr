#include <iostream> // Подключение библиотеки ввода и вывода
using namespace std;
int main()
{
	setlocale(LC_ALL, "Russian"); // Для корретного отображения русского языка
	// Задание 1
	double a, b; 
	cout << "Задание 1\n";
	cout << "введите а\n"; 
	cin >> a; 
	cout << "введите b\n"; 
	cin >> b; 
	cout << "S=" << a * b; 
	cout << "\nЗадание 2";
	// Задание 2
	double d, p; 
	cout << "\nвведите диаметр\n"; 
	cin >> d; 
	p = 3.14;  
	cout << "L = " << p * d; 
	cout << "\nЗадание 3";
	// Задание 3
	cout << "\nВведите а и b\n"; 
	cin >> a >> b;  
	cout << "(a+b)/2 = " << (a + b) / 2; 
	cout << "\nЗадание 4";
	// Задание 4
	cout << "\nВведите a и b\n"; 
	cin >> a >> b; 
	cout << "a^2 + b^2 = " << (a * a) + (b * b); 
	cout << "\na^2 - b^2 = " << (a * a) - (b * b);
	cout << "\na^2 * b^2 = " << (a * a) * (b * b); 
	cout << "\na^2 / b^2 = " << (a * a) / (b * b); 
	cout << "\nЗадание 5";
	// Задание 5
	cout << "\nВведите а и b\n";
	cin >> a >> b; 
	if (a < 0)
		a = a * -1;
	if (b < 0)
		b = b * -1;
	cout << "|a| + |b| = " << a + b; 
	cout << "\n|a| - |b| = " << a - b; 
	cout << "\n|a| * |b| = " << a * b; 
	cout << "\n|a| / |b| = " << a / b; 
}
