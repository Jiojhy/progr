#include <iostream> // Подключение библиотеки ввода и вывода
int main()
{
	// Задание 1
	double a, b; // Объявление переменных типа double для работы с дробями
	std::cout << "input a\n"; // Вывод в консоль input a
	std::cin >> a; // Ввод пользователем первого числа
	std::cout << "input b\n"; // Вывод в консоль input b
	std::cin >> b; // Ввод пользователем второго числа
	std::cout << "S=" << a * b; // Вывод в консоль площадь
	// Задание 2
	double d, p; // Объявление переменных типа double для работы с дробями
	std::cout << "\ninput d\n"; // Вывод в консоль input d
	std::cin >> d; // Ввод пользователем диаметра
	p = 3.14;  // Число п
	std::cout << "L = " << p * d; // Вывод в консоль длину
	// Задание 3
	std::cout << "\ninput a and b\n"; // Вывод в консоль input a and b
	std::cin >> a >> b; // Ввод пользователем a и b 
	std::cout << "(a+b)/2 = " << (a + b) / 2; // Вывод в консоль среднего арифмитического двух чисел
	// Задание 4
	std::cout << "\ninput a and b\n"; // Вывод в консоль input a and b
	std::cin >> a >> b;  // Ввод пользователем чисел a и b
	std::cout << "a^2 + b^2 = " << (a * a) + (b * b); // Вывод в консоль сложения квадратов этих чисел
	std::cout << "\na^2 - b^2 = " << (a * a) - (b * b); // Вывод в консоль разность квадратов этих чисел
	std::cout << "\na^2 * b^2 = " << (a * a) * (b * b); // Вывод в консоль произведение квадратов этих чисел
	std::cout << "\na^2 / b^2 = " << (a * a) / (b * b); // Вывод в консоль частное квадратов этих чисел
	// Задание 5
	std::cout << "\ninput a and b\n"; // Вывод в консоль input a and b
	std::cin >> a >> b;  // Ввод пользователем чисел a и b
	if (a < 0)
		a = a * -1;
	if (b < 0)
		b = b * -1;
	std::cout << "|a| + |b| = " << a + b; // Вывод в консоль сложения
	std::cout << "\n|a| - |b| = " << a - b; // Вывод в консоль разность
	std::cout << "\n|a| * |b| = " << a * b; // Вывод в консоль произведение 
	std::cout << "\n|a| / |b| = " << a / b; // Вывод в консоль частное 
}
