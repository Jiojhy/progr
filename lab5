#include <iostream>
using namespace std;
int main()
{
	setlocale(LC_ALL, "Russian");
	double x1, y1, x2, y2, e;
	// Задание 1
	cout << "Задание 1\n";
	cout << "Введите кординаты первой точки\n";
	cin >> x1 >> y1;
	cout << "Введите кординаты второй точки\n";
	cin >> x2 >> y2;
	e = sqrt((x2 - x1) * (x2 - x1) + (y2 - y1) * (y2 - y1));
	cout << "Расстояние между этими точками = " << e;
	// Задание 2
	cout << "\nЗадание 2";
	cout << "\nВведите кординаты точки A\n";
	cin >> x1 >> y1;
	cout << "Введите кординаты точки C\n";
	cin >> x2 >> y2;
	e = sqrt((x2 - x1) * (x2 - x1) + (y2 - y1) * (y2 - y1));
	cout << "Введите кординаты точки B\n";
	cin >> x1 >> y1;
	x1 = sqrt((x2 - x1) * (x2 - x1) + (y2 - y1) * (y2 - y1));
	cout << "Отрезок AC = " << e << "\nОтрезок BC = " << x1 << "\nСумма отрезков AC и BC = " << x1 + e;
	// Задание 3
	cout << "\nЗадание 3\n";
	cout << "Введите кординаты точки A\n";
	cin >> x1 >> y1;
	cout << "Введите кординаты точки B\n";
	cin >> x2 >> y2;
	double x3, y3;
	cout << "Введите кординаты точки C\n";
	cin >> x3 >> y3;
	e = sqrt((x3 - x1) * (x3 - x1) + (y3 - y1) * (y3 - y1));
	x1 = sqrt((x3 - x2) * (x3 - x2) + (y3 - y2) * (y3 - y2));
	cout << "Произведение AC и BC = " << x1 * e;
	// Задание 4
	cout << "\nЗадание 4\n";
	cout << "Введите кординаты точки A\n";
	cin >> x1 >> y1;
	cout << "Введите кординаты точки B\n";
	cin >> x2 >> y2;
	double p, s;
	if ((x2 - x1) < 0) { 
		if ((y2 - y1) < 0)
			p = (((x2 - x1) * 2) + ((y2 - y1) * 2)) * -1;
		else p = ((x2 - x1) * 2 * -1) + ((y2 - y1) * 2);
	}
	else if ((y2 - y1) < 0)
		p = ((x2 - x1) * 2) + ((y2 - y1) * 2 * -1);
	else p = ((x2 - x1) * 2) + ((y2 - y1) * 2);
	s = (y2 - y1) * (x2 - x1);
	if (s < 0)
		s = s * -1;
	cout << "Периметр = " << p << "\nПлощадь = " << s;
	// Задание 5
	cout << "\nЗадание 5\n";
	cout << "Введите кординаты точки A\n";
	cin >> x1 >> y1;
	cout << "Введите кординаты точки B\n";
	cin >> x2 >> y2;
	cout << "Введите кординаты точки C\n";
	cin >> x3 >> y3;
	e = sqrt((x2 - x1) * (x2 - x1) + (y2 - y1) * (y2 - y1)); // Длина AB
	x1 = sqrt((x3 - x1) * (x3 - x1) + (y3 - y1) * (y3 - y1)); // Длина AC
	x2 = sqrt((x3 - x2) * (x3 - x2) + (y3 - y2) * (y3 - y2)); // Длина BC
	s = (((e + x1 + x2)/2) - e) * (((e + x1 + x2)/2) - x2);
	cout << "Периметр = " << e + x1 + x2 << "\nПлощадь = " << s;
}
