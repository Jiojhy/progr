#include <iostream>
using namespace std;
int main()
{
	setlocale(LC_ALL, "Russian");
	double a, b, c, d;
	// Задание 1
	cout << "Задание 1\n";
	cout << "Введите градус угла a\n";
	cin >> a;
	cout << "угол a в радианах = " << a * 3.14 / 180;
	// Задание 2
	cout << "\nЗадание 2\n";
	cout << "Введите угол a в радианах\n";
	cin >> a;
	cout << "" << a * 180 / 3.14;
	// Задание 3
	cout << "\nЗадание 3\n";
	cout << "Введите количество и стоимость конфет\n";
	cin >> a >> b;
	cout << "Введите кол-во килограмм конфет которое хотите купить\n";
	cin >> c;
	cout << "Стоимость 1 кило конфет = " << b / a << "\n" << c << "кило конфет будет стоить " << c * (b / a);
	// Задание 4
	cout << "\nЗадание 4\n";
	cout << "Введите скорость первого автомобиля\n";
	cin >> a;
	cout << "Введите скорость второго автомобиля\n";
	cin >> b;
	cout << "Введите расстояние между ними\n";
	cin >> c;
	cout << "Введите время\n";
	cin >> d;
	cout << "Через " << d << " часов, Расстояние между ними будет = " << (a + b) * d + c;
	// Задание 5
	cout << "\nЗадание 5\n";
	cout << "Введите A и B\n";
	cin >> a >> b;
	cout << "x = " << (0 - b) / a;
	// Задание 6
	cout << "\nЗадание 6\n";
	double A1, B1, C1, A2, B2, C2;
	cout << "Введите A1, B1, C1\n";
	cin >> A1 >> B1 >> C1;
	cout << "Введите A2, B2, C2\n";
	cin >> A2 >> B2 >> C2;
	b = 0;
	for (double x = 1; x < 100; ++x)
		for (double y = 1; y < 100; ++y)
			if ((A1 * x + B1 * y == C1) and (A2 * x + B2 * y == C2)) {
				cout << "x = " << x << "\ny = " << y;
				b += 1;
			}
	if (b == 0)
		cout << "Решений нет";
}
