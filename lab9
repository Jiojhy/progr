#include <iostream>
using namespace std;
int main()
{
	setlocale(LC_ALL, "Russian");
	int a, b, c;
	//Задание 1
	cout << "Задание 1\n";
	cout << "Введите количество прошедших секунд\n";
	cin >> a;
	cout << "Прошло " << a % 60 << " секунд с начала последней минуты\n";
	//Задание 2
	cout << "Задание 2\n";
	cout << "Введите K\n";
	cin >> a;
	cout << "Номер дня недели = " << a % 7;
	//Задание 3
	cout << "\nЗадание 3\n";
	cout << "Введите K\n";
	cin >> a;
	a = a % 7;
	if (a == 0)
		a = 7;
	cout << "Номер дня недели = " << a;
	//Задание 4
	cout << "\nЗадание 4\n";
	cout << "Введите A B C\n";
	cin >> a >> b >> c;
	cout << "Количество квадратов = " <<(a * b) / (c * c);
	cout << "\nПлощадь не занятой поверхности = " << (a * b) - ((a * b) / (c * c) * (c * c));
	//Задание 5
	cout << "\nЗадание 5\n";
	cout << "Введите год\n";
	cin >> a;
	if (a % 100 == 0)
		a = a / 100;
	else
		a = a / 100 + 1;
	cout << "Номер столетия = " << a;
}
